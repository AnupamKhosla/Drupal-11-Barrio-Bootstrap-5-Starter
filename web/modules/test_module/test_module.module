<?php

/**
 * @file
 * Primary module hooks for test_module module.
 */

use Drupal\Core\Messenger\MessengerInterface;

/**
 * Implements hook_user_login().
 *
 * This function runs automatically whenever a user logs into your site.
 */
function test_module_user_login($account) {
  // Use addStatus() for the standard green success message
  \Drupal::messenger()->addStatus(t('Hello @name! The test_module is active and working.', [
    '@name' => $account->getDisplayName(),
  ]));
}

/**
 * Implements hook_help().
 *
 * This provides a description for your module on the /admin/help page.
 */
function test_module_help($route_name, \Drupal\Core\Routing\RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.test_module':
      return '<p>' . t('This is a simple module to test hook implementations.') . '</p>';
  }
}